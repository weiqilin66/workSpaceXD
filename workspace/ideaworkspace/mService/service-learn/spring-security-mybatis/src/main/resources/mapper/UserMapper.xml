<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lwq.springsecuritymybatis.mapper.UserMapper">

    <select id="loadUserByUsername" resultType="com.lwq.springsecuritymybatis.entity.User">
        select * from user where username=#{username}
    </select>
    <select id="getUserRoleById" resultType="com.lwq.springsecuritymybatis.entity.Role">
    select * from  role  where id in(select rid from user_role where uid=#{id})
    </select>
</mapper>
